<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
        xmlns:gtrax='urn:import:com.norex.gtrax.client'>
        
        <ui:style>
        	.panel {
        		float: left;
        		margin: 10px 10px 10px 0;
        		width: 300px;
        		border: 1px solid #000;
        	}
        
        	.remove {
        		text-decoration: underline;
        	}
        </ui:style>
        
	        <gwt:DecoratorPanel styleName="{style.panel}">
	        	<gwt:VerticalPanel>
	        		<gwt:Label ui:field="name" />
	        		<gwt:Anchor ui:field="remove" text="remove" styleName="{style.remove}" />
	        		<gwt:DisclosurePanel ui:field="members">
	        			<gwt:VerticalPanel>
	        				<gwt:HorizontalPanel>
	        					<gtrax:AuthSuggestBox ui:field="add" />
	        					<gwt:Button ui:field="addButton" text="add" />
	        				</gwt:HorizontalPanel>
	        				
	        				<gwt:VerticalPanel ui:field="membersList" />
	        			</gwt:VerticalPanel>
	        		</gwt:DisclosurePanel>
	        	</gwt:VerticalPanel>
	        </gwt:DecoratorPanel>
        
</ui:UiBinder>