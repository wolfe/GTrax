<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
        xmlns:res='urn:with:com.norex.gtrax.client.contact.ContactView.ContactViewResources'
        xmlns:datepicker='urn:import:com.google.gwt.user.datepicker.client'>

		<gwt:HorizontalPanel ui:field="container">
			<gwt:VerticalPanel ui:field="leftCol">
				<gwt:TextBox ui:field="name" />
				
				<gwt:HorizontalPanel res:styleName="css.nodeContainer">
					<gwt:Label res:styleName="css.nodeLabel">Email Addresses</gwt:Label>
					<gwt:Anchor ui:field="addNewEmail" res:styleName="css.addNew" />
				</gwt:HorizontalPanel>
				<gwt:VerticalPanel ui:field="emailaddresses" res:styleName="css.elementsContainer"></gwt:VerticalPanel>
				
				<gwt:HorizontalPanel res:styleName="css.nodeContainer">
					<gwt:Label res:styleName="css.nodeLabel">Phone Numbers</gwt:Label>
					<gwt:Anchor ui:field="addNewPhone" res:styleName="css.addNew" />
				</gwt:HorizontalPanel>
				<gwt:VerticalPanel ui:field="phonenumbers" res:styleName="css.elementsContainer"></gwt:VerticalPanel>
				
				<gwt:HorizontalPanel res:styleName="css.nodeContainer">
					<gwt:Label res:styleName="css.nodeLabel">Websites</gwt:Label>
					<gwt:Anchor ui:field="addWebsite" res:styleName="css.addNew" />
				</gwt:HorizontalPanel>
				<gwt:VerticalPanel ui:field="websites" res:styleName="css.elementsContainer"></gwt:VerticalPanel>
				
				<gwt:HorizontalPanel res:styleName="css.nodeContainer">
					<gwt:Label res:styleName="css.nodeLabel">Notes</gwt:Label>
					<gwt:TextArea ui:field="notes" />
				</gwt:HorizontalPanel>
				
				<gwt:HorizontalPanel res:styleName="css.nodeContainer">
					<gwt:Label res:styleName="css.nodeLabel">Birthday</gwt:Label>
				</gwt:HorizontalPanel>
				<gwt:VerticalPanel res:styleName="css.elementsContainer">
					<datepicker:DateBox ui:field="birthday" />
				</gwt:VerticalPanel>
				
			</gwt:VerticalPanel>

			<gwt:VerticalPanel ui:field="rightCol">
				<gwt:Image ui:field="contactImage" />
				
				<gwt:Label text="Actions" res:styleName="css.nodeLabel" />
				<gwt:Button ui:field="createDeal" text="Create Proposal" />
				<gwt:Button ui:field="createProject" text="Create Project" />
				
				<gwt:Label text="Associated Projects" res:styleName="css.nodeLabel" />
				<gwt:VerticalPanel ui:field="projects" />
			</gwt:VerticalPanel>
		</gwt:HorizontalPanel>

</ui:UiBinder> 