<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>
        
        <gwt:DecoratorPanel>
        	<gwt:VerticalPanel>
        		<gwt:Label ui:field="name" />
        		<gwt:DisclosurePanel ui:field="members">
        			<gwt:VerticalPanel>
        				<gwt:HorizontalPanel>
        					<gwt:TextBox ui:field="add" />
        					<gwt:Button ui:field="addButton" text="add" />
        				</gwt:HorizontalPanel>
        				
        				<gwt:VerticalPanel ui:field="membersList" />
        			</gwt:VerticalPanel>
        		</gwt:DisclosurePanel>
        	</gwt:VerticalPanel>
        </gwt:DecoratorPanel>
        
</ui:UiBinder>